# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# increase window size
ctrl + alt + shift - h : yabai -m window --resize left:-30:0
ctrl + alt + shift - j : yabai -m window --resize bottom:0:30
ctrl + alt + shift - k : yabai -m window --resize top:0:-30
ctrl + alt + shift - l : yabai -m window --resize right:30:0

# decrease window size
ctrl + shift - h : yabai -m window --resize left:30:0
ctrl + shift - j : yabai -m window --resize bottom:0:-30
ctrl + shift - k : yabai -m window --resize top:0:30
ctrl + shift - l : yabai -m window --resize right:-30:0


#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270
shift + alt - w : yabai -m space --rotate 90

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# move floating window
shift + ctrl - a : yabai -m window --move rel:-30:0
shift + ctrl - s : yabai -m window --move rel:0:30
shift + ctrl - w : yabai -m window --move rel:0:-30
shift + ctrl - d : yabai -m window --move rel:30:0

# -- Modifying Window Size --

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# toggle window split type
alt - e : yabai -m window --toggle split

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

#set insertion point to focused container
ctrl + alt - a : yabai -m window --insert west
ctrl + alt - s : yabai -m window --insert south
ctrl + alt - w : yabai -m window --insert north
ctrl + alt - d : yabai -m window --insert east

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai

# ประกาศโหมด openapp ที่จะคอยรับคีย์เพรส
:: default
:: openapp @

# ใช้ alt - o เพื่อเข้าสู่โหมด openapp
default < alt - o ; openapp

openapp < space ; default
openapp < escape ; default

openapp < a : open -a /Applications/Arc.app; default
openapp < s : open -a /Applications/Safari.app; default
openapp < d : open -a /Applications/Discord.app; default
openapp < t : open -a /Applications/WezTerm.app; default
openapp < c : open -a /Applications/Claude.app; default

openapp < k : osascript -e 'set volume output volume (output volume of (get volume settings) + 5)'
openapp < j : osascript -e 'set volume output volume (output volume of (get volume settings) - 5)'
